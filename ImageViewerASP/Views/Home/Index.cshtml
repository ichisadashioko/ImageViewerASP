@model IEnumerable<ImageViewerASP.Models.Card>
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/Contents/image-box.css" />
<div class="container flex flex-wrap">
    @foreach (var item in Model)
    {
        <a href="/Home/Manga/@item.RequestId" class="card">
            <img class="lazy" data-src="@item.PreviewImage" alt="">
            <p class="title">@item.Name</p>
        </a>
    }
</div>
